{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: Build Calendar System", // <-- NEW LABEL
            "command": "C:\\Program Files\\CodeBlocks\\MinGW\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
