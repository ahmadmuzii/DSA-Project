                "${fileDirname}\\main.cpp",
                "${fileDirname}\\calendar.cpp",
                "${fileDirname}\\event.cpp",
                "${fileDirname}\\file_manager.cpp",
                "-o",
                // ðŸ›‘ USE A FIXED EXECUTABLE NAME ðŸ›‘
